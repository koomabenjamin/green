<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/consult_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@mipmap/logo" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/consult_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/consult_expertise"
                        android:layout_below="@id/consult_name"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/consult_brief"
                        android:layout_below="@+id/consult_expertise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <RatingBar
                        android:id="@+id/consult_rating"
                        style="@android:style/Widget.DeviceDefault.RatingBar"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/consult_brief"
                        android:layout_marginEnd="60dp"
                        android:layout_marginRight="60dp"
                        android:numStars="5"
                        android:stepSize="0.5" />

                    <!--<Button-->
                        <!--android:id="@+id/btn_consult"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:text="Consult"-->
                        <!--android:layout_below="@id/consult_rating"/>-->

                </RelativeLayout>


        </LinearLayout>


</LinearLayout>